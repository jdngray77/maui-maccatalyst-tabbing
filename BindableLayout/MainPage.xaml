<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BindableLayout.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="100"
            BindableLayout.ItemsSource="{Binding ItemViewModels}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <Entry IsReadOnly="{Binding IsReadOnly}" 
                           MinimumHeightRequest="50" 
                           MinimumWidthRequest="300">
                        <Entry.Triggers>
                            <DataTrigger TargetType="Entry" Binding="{x:Binding IsReadOnly}" Value="True">
                                <Setter Property="Placeholder" Value="Read only"/>
                                <Setter Property="BackgroundColor" Value="DarkGray"/>
                            </DataTrigger>
                        </Entry.Triggers> 
                    </Entry>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
